<Window x:Class="PROG6212_POE_PART_1_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG6212_POE_PART_1_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Welcome to Contract Monthly Claim System" 
                   FontSize="20" HorizontalAlignment="Center" Margin="10"/>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Lecturer Panel">
                <Grid>
                    <StackPanel Margin="10">
                        <TextBlock Text="Submit Claim" FontSize="16" Margin="0,0,0,10"/>
                        <Button Name="SubmitClaimButton" Content="Submit Claim" Click="SubmitClaimButton_Click" 
                                Width="150" Height="30" Margin="0,0,0,10"/>

                        <TextBlock Text="Upload Document" FontSize="16" Margin="0,0,0,10"/>
                        <Button Name="UploadDocumentButton" Content="Upload Supporting Document" 
                                Click="UploadDocumentButton_Click" Width="200" Height="30" Margin="0,0,0,10"/>

                        <TextBlock Text="Track Status" FontSize="16" Margin="0,0,0,10"/>
                        <Button Name="TrackStatusButton" Content="View Claim Status" 
                                Click="TrackStatusButton_Click" Width="150" Height="30" Margin="0,0,0,10"/>

                        <TextBlock Name="StatusTextBlock" Text="Claim Status: Pending" 
                                   FontSize="14" Margin="0,20,0,0" Foreground="Blue"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Admin Panel">
                <Grid>
                    <StackPanel Margin="10">
                        <TextBlock Text="Approve Claims" FontSize="16" Margin="0,0,0,10"/>
                        <Button Name="ApproveClaimButton" Content="Verify and Approve Claim" 
                                Click="ApproveClaimButton_Click" Width="200" Height="30" Margin="0,0,0,10"/>

                        <TextBlock Text="View All Claims" FontSize="16" Margin="0,0,0,10"/>
                        <Button Name="ViewClaimsButton" Content="View Pending Claims" 
                                Click="ViewClaimsButton_Click" Width="150" Height="30" Margin="0,0,0,10"/>

                        <TextBlock Name="AdminStatusTextBlock" Text="All Claims: 5 Pending" 
                                   FontSize="14" Margin="0,20,0,0" Foreground="Green"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem Content="System provides consistent and reliable information."/>
        </StatusBar>
    </Grid>
</Window>
